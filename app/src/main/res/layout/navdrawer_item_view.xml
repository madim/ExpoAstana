
<merge
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:id="@+id/icon"
        android:layout_height="@dimen/navdrawer_item_icon_size"
        android:layout_width="@dimen/navdrawer_item_icon_size"
        android:layout_marginEnd="@dimen/navdrawer_item_icon_margin_end"
        android:layout_marginRight="@dimen/navdrawer_item_icon_margin_end"
        android:layout_gravity="start|center_vertical" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start|center_vertical"
        android:textAppearance="@style/TextAppearance.Body2"
        android:textColor="@color/navdrawer_item_title"
        android:text="@string/placeholder_lorem_ipsum" />

</merge>