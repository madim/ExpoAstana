<?xml version="1.0" encoding="utf-8"?>

<com.madone.virtualexpo.expoastana.ui.widget.ForegroundLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/padding_normal"
    android:paddingTop="@dimen/spacing_normal"
    android:paddingEnd="@dimen/padding_normal"
    android:paddingRight="@dimen/padding_normal"
    android:paddingBottom="@dimen/spacing_normal"
    android:foreground="?android:selectableItemBackground"
    android:orientation="horizontal"
    android:baselineAligned="false">

    <com.madone.virtualexpo.expoastana.ui.widget.AspectRatioView
        android:layout_width="@dimen/explore_io_theme_cards_session_image_width"
        android:layout_height="0dp"
        android:layout_marginEnd="@dimen/padding_normal"
        android:layout_marginRight="@dimen/padding_normal"
        app:aspectRatio="@dimen/aspect_4_3">

        <ImageView
            android:id="@+id/thumbnail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/io_logo"/>

    </com.madone.virtualexpo.expoastana.ui.widget.AspectRatioView>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.SessionTitle"
            android:maxLines="3"
            android:ellipsize="end"
            tools:text="Title" />

        <TextView
            android:id="@+id/session_type_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:ellipsize="end"
            android:textStyle="bold"
            tools:text="Session Type"
            style="@style/Body1Text" />

        <TextView
            android:id="@+id/info_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:maxLines="2"
            android:ellipsize="end"
            tools:text="Description"
            style="@style/Body1Text" />

    </LinearLayout>

</com.madone.virtualexpo.expoastana.ui.widget.ForegroundLinearLayout>
